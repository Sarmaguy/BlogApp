@model BlogApp.Models.User



<form method="post" action="/Account/Login" class="login-form">
<h2 class="login-heading">Login</h2>
    <div class="form-group">
        <label for="username">Username:</label>
        <input type="text" name="username" id="username" class="input-field" required />
    </div>
    <div class="form-group">
        <label for="password">Password:</label>
        <input type="password" name="password" id="password" class="input-field" required />
    </div>
    <button type="submit" class="submit-btn">Login</button>
</form>

@if (ViewBag.Error != null)
{
    <p class="error-message">@ViewBag.Error</p>
}

<style>
    /* Centering the login form within the page */
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f4f4f4;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        flex-direction: column; /* Allow footer to be at bottom */
    }

    /* Login Form Container */
    .login-form {
        background-color: #fff;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        max-width: 400px;
        width: 100%;
        box-sizing: border-box;
    }

    /* Login Heading */
    .login-heading {
        text-align: center;
        font-size: 24px;
        margin-bottom: 20px;
        color: #333;
    }

    /* Form Group */
    .form-group {
        margin-bottom: 20px;
    }

    /* Label */
    label {
        display: flex;
        margin-bottom: 5px;
        font-size: 14px;
        color: #333;
    }

    /* Input Fields */
    .input-field {
        width: 100%;
        padding: 10px;
        margin-top: 5px;
        border: 1px solid #ccc;
        border-radius: 4px;
        font-size: 14px;
        box-sizing: border-box;
    }

    /* Input Focus Effect */
    .input-field:focus {
        outline: none;
        border-color: #007bff;
        box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
    }

    /* Submit Button */
    .submit-btn {
        width: 100%;
        padding: 10px;
        background-color: #007bff;
        border: none;
        border-radius: 4px;
        color: #fff;
        font-size: 16px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .submit-btn:hover {
        background-color: #0056b3;
    }

    /* Error Message */
    .error-message {
        color: red;
        text-align: center;
        margin-top: 15px;
    }
    .pb-3 {
    display: flex;
    flex-wrap: wrap;
    flex-direction: row;
    align-content: stretch;
    justify-content: space-around;
}
</style>
